<?xml version="1.0" encoding="utf-8"?><!-- Needed code to show item was highlighted --><!-- URL: https://stackoverflow.com/a/17199381/9849310 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:src="@drawable/ic_location_city" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:hint="@string/song_name"
            android:maxLines="1"
            android:paddingLeft="16dp"
            android:singleLine="true"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:hint="@string/song_length"
            android:maxLines="1"
            android:paddingLeft="16dp"
            android:singleLine="true"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>